<%= error_messages_for object.class.to_s.underscore.to_sym %>

<% remote_form_for(object.class.to_s.underscore.to_sym, :url => self.send(object.class.to_s.tableize + '_path'), :update => "posts", :html => { :class => 'edit_record_form' }) do |f| %>


<div class="record_view">

<%= render :partial => object.class.to_s.tableize + '/' + object.class.to_s.underscore, :locals => { :f => f } %>

</div>

<div><%= submit_tag 'Create' %> | <%= link_to_function 'Cancel', "Element.hide('new_" + object.class.to_s.underscore + "')" %></div>

<% end -%>
