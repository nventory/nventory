<%- @tooltips = [] %>
<%- @page_title = "Outlet: " + h(@outlet.name) %>

<div class="record_view">

  <h1><%= tooltip(Node,:produced_outlets,'Outlets') %>: <%= h(@outlet.name) %></h1>
  
  <p>
    <strong><%= tooltip(Outlet,:producer) %>:</strong> <%= link_to @outlet.producer.name, @outlet.producer %><br />
    <strong><%= tooltip(HardwareProfile,:outlet_type) %>:</strong> <%= @outlet.producer.hardware_profile.outlet_type %><br />
  </p>
  
  <p>
    <strong><%= tooltip(Outlet,:consumer) %>:</strong> 
      <%- if @outlet.consumer_type == 'NetworkInterface' %>
        <%= link_to "#{@outlet.consumer.node.name} [#{@outlet.consumer.name}]", @outlet.consumer unless @outlet.consumer.nil? %>
      <%- else -%>
        <%= link_to "#{@outlet.consumer.name}", @outlet.consumer unless @outlet.consumer.nil? %>
      <%- end -%>
    <br />
    <strong><%= tooltip(Outlet,:consumer_type) %>:</strong> <%= @outlet.consumer_type %>
  </p>
  
  <p class="metadata"><strong><%= tooltip(Outlet,:created_at) %>:</strong> <%= h(@outlet.created_at) %><br />
    <strong><%= tooltip(Outlet,:updated_at) %>:</strong> <%= h(@outlet.updated_at) %>
  </p>

</div>

<%= @tooltips %>
