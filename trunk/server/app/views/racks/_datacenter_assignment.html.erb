<%- if rack.datacenter -%>
  <table cellspacing="0" class="styled" summary="Datacenter assignment for this rack.">
  <caption>Datacenter</caption>
  <thead>
  <tr>
      <th>Name</th>
      <th>Assigned at</th>
      <th>&nbsp;</th>
  </tr>
  </thead>
  <tbody>
  <%- for assignment in [rack.datacenter_rack_assignment] %>
  <tr class="<%= cycle('odd', 'even') -%>" id="<%= dom_id(assignment) %>">
      <td><%= link_to assignment.datacenter.name, datacenter_path(assignment.datacenter) %></td>
      <td><%= link_to h(assignment.assigned_at.to_formatted_s(:long)), datacenter_rack_assignment_path(assignment) %></td>
      <td><%= link_to_remote 'Delete',
                              :url => datacenter_rack_assignment_path(assignment),
                              :confirm => 'Are you sure?',
                              :method => :delete %></td>
  </tr>
  <%- end %>
  </tbody>
  </table>
<%- else -%>
  <p>This rack is not assigned to a datacenter.</p>
<%- end -%>