<%- unless @tooltips ; then @tooltips = []; ttflag = true ; else; ttflag = false ;  end %>
<%- @page_title = 'Editing ' + object.class.to_s.underscore.titleize %>
<h1>Editing <%= object.class.to_s.underscore.titleize %></h1>

<%= error_messages_for object.class.to_s.underscore.to_sym %>

<% form_for(object, :html => { :method => :put, :class => 'edit_record_form' } ) do |f| %>

<div class="record_view">

<%= render :partial => object.class.to_s.tableize + '/' + object.class.to_s.underscore, :locals => { :f => f } %>

</div>

<p><%= submit_tag "Save" %> | <%= link_to 'Cancel', self.send(object.class.to_s.underscore + '_path', object) %></p>

<%= render :partial => 'shared/requirement_note' %>

<% end %>

<%= @tooltips if ttflag %>
