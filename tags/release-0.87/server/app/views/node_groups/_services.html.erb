      :after => "Element.hide('hide_parentsvcs');Element.show('show_parentsvcs');Element.hide('add_parent_service_link')" %>
</p>

<p id="show_parentsvcs_spinner"><b><font color=red size=3>Loading...<br /></font></b> <%= image_tag('spinner.gif', :alt => 'Loading') %></p>

<div id="parent_service_assgns"> </div>

<div id="create_parent_service_assignment">
  <%= render :partial => 'create_parent_service_assignment' %>
