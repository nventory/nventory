<tr class="<%= cycle('odd', 'even') -%>">
  <td nowrap="nowrap" width="5%"><%= link_to 'View', self.send(index_row.class.to_s.underscore + '_path', index_row) %> / <%= link_to 'Edit', self.send('edit_' + index_row.class.to_s.underscore + '_path', index_row) %>
  <td><%= link_to index_row.environment.name, environment_path(index_row.environment) %></td>
  <td><%= link_to index_row.program.name, program_path(index_row.program) %></td>
  <td><%= link_to index_row.assigned_at.to_formatted_s(:long), environment_program_assignment_path(index_row) %></td>
</tr>