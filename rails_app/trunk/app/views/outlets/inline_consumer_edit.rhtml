<% remote_form_for(:outlet, :url => outlet_path(@outlet), :html => { :method => :put }) do |f| %>
  <%= f.select :consumer_id, Node.find(:all, :order => 'name').collect { |n| [ n.name, n.id ] }, { :include_blank => true } %> 
  <%= f.hidden_field :id, { :value => @outlet.id } %>
  <%= submit_tag "Assign" %> | <%= link_to_remote 'Cancel', :url => consumer_outlet_path(@outlet), :method => :get, :update => dom_id(@outlet) %>
<% end %>